// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Repo {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  ghId        String   @unique
  name        String
  owner       String
  type        RepoType
  homepage    String?
  htmlUrl     String
  licenseName String?
  licenseUrl  String?
  thumbnail   String
  description String?
  created_at  String
  stacks      String[]
}

model RepoName {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  ghId  String   @unique
  name  String
  owner String
  type  RepoType
}

enum RepoType {
  User
  Organization
}
